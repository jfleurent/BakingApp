<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/CardViewBackground">
    <TextView
        android:id="@+id/expandable_list_item_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/expandable_listview_item_text_size"
        android:paddingBottom="@dimen/expandable_listview_item_padding_bottom"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/expandable_listview_item_view_height"
        android:background="@color/colorPrimaryDark">

    </View>

</LinearLayout>